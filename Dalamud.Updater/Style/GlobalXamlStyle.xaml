<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="GlobalXamlStyle">
    <Style TargetType="Button" x:Key="Button_Defult_Style">
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="BorderBrush" Value="LightGray"></Setter>
        <Setter Property="Background"  Value="WhiteSmoke"></Setter>
        <Setter Property="FontWeight"  Value="Bold"></Setter>
    </Style>

    <Style TargetType="ToggleButton" x:Key="Togglebutton_Defult_Style">
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="BorderBrush" Value="LightGray"></Setter>
        <Setter Property="Background"  Value="WhiteSmoke"></Setter>
        <Setter Property="FontWeight"  Value="Bold"></Setter>
    </Style>


    <Style TargetType="Label" x:Key="Default_Label">
        <Setter Property="Foreground"  Value="Black"></Setter>
    </Style>

    <Style TargetType="Label" x:Key="Hightright_Label">
        <Setter Property="Foreground"  Value="CornflowerBlue"></Setter>
    </Style>

    <Style TargetType="Window" x:Key="Default_Window">
        <Setter Property="SizeToContent" Value="WidthAndHeight"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>
        <Setter Property="Topmost" Value="True"></Setter>
        <Setter Property="Background" Value="White"></Setter>
    </Style>

</ResourceDictionary>
